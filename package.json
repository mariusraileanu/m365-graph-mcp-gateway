{
  "name": "m365-graph-mcp-gateway",
  "version": "1.0.0",
  "description": "Opinionated MCP gateway for Microsoft Graph API with MSAL auth and guardrails",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "login": "tsx src/index.ts --login",
    "test": "tsx --test src/**/*.test.ts"
  },
  "keywords": ["mcp", "microsoft-graph", "msal", "email", "calendar"],
  "license": "MIT",
  "dependencies": {
    "@azure/msal-node": "^3.1.0",
    "@microsoft/microsoft-graph-client": "^3.0.7",
    "zod": "^3.23.0",
    "yaml": "^2.4.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/uuid": "^9.0.8",
    "typescript": "^5.3.3",
    "tsx": "^4.7.0"
  }
}
