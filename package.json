{
  "name": "m365-graph-mcp-gateway",
  "version": "1.0.0",
  "description": "Opinionated MCP gateway for Microsoft Graph API with MSAL auth and guardrails",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "login": "tsx src/index.ts --login",
    "login:interactive": "tsx src/index.ts --login-interactive",
    "login:device": "tsx src/index.ts --login-device",
    "check": "tsc --noEmit",
    "lint": "eslint 'src/**/*.ts'",
    "format": "prettier --write 'src/**/*.ts'",
    "format:check": "prettier --check 'src/**/*.ts'",
    "test": "tsx --test 'src/**/*.test.ts'",
    "ci": "npm run lint && npm run format:check && npm run build && npm run test"
  },
  "keywords": [
    "mcp",
    "microsoft-graph",
    "msal",
    "email",
    "calendar"
  ],
  "license": "MIT",
  "dependencies": {
    "@azure/msal-node": "^3.1.0",
    "@microsoft/microsoft-graph-client": "^3.0.7",
    "dotenv": "^16.4.5",
    "open": "^10.1.0",
    "uuid": "^9.0.1",
    "yaml": "^2.4.0",
    "zod": "^3.23.0",
    "zod-to-json-schema": "^3.25.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@types/node": "^20.11.0",
    "@types/uuid": "^9.0.8",
    "eslint": "^9.0.0",
    "prettier": "^3.2.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.0.0"
  }
}
