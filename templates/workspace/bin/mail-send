#!/usr/bin/env bash
set -euo pipefail
if [[ $# -eq 4 && "$1" == "--send-now" ]]; then
  exec /home/node/workspace/bin/graph-mcp-send "$@"
fi
if [[ $# -ne 3 ]]; then
  echo "Usage: mail-send --send-now <to> <subject> <body>"
  echo "Alias: mail-send <to> <subject> <body>"
  exit 1
fi
exec /home/node/workspace/bin/graph-mcp-send --send-now "$1" "$2" "$3"
